{
  "name": "Comment",
  "plural": "comments",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "content": {
      "type": "string",
      "index": true
    },
    "created_time": {
      "type": "date",
      "default": "$now"
    },
    "postId": {
      "type": "string",
      "index": true
    },
    "userId": {
      "type": "number",
      "index": true
    }
  },
  "validations": [],
  "relations": {
    "user": {
      "type": "belongsTo",
      "model": "Member",
      "foreignKey": "userId"
    },
    "post": {
      "type": "belongsTo",
      "model": "Post",
      "foreignKey": "postId"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$unauthenticated",
      "permission": "DENY"
    }
  ],
  "methods": {}
}
